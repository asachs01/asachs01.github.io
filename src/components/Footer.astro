---
import Icon from './Icon.astro';

const currentYear = new Date().getFullYear();
---

<footer>
	<div class="group">
		<p class="built-with">
			<span class="prompt" aria-hidden="true">>_</span>
			Built with <a href="https://astro.build/">Astro</a>, caffeine, and questionable life choices
		</p>
		<p>&copy; {currentYear} Aaron Sachs</p>
	</div>
	<p class="socials">
		<a href="https://github.com/asachs01">GitHub</a>
		<a href="https://www.linkedin.com/in/asachs01">LinkedIn</a>
	</p>
</footer>
<style>
	footer {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-top: auto;
		padding: 1.5rem;
		text-align: center;
		color: var(--gray-400);
		font-size: var(--text-sm);
	}

	footer a {
		color: var(--gray-400);
		text-decoration: none;
		background-image: var(--gradient-accent-text);
		background-size: 0% 2px;
		background-position: 0 100%;
		background-repeat: no-repeat;
		transition: background-size 0.3s ease;
	}

	footer a:hover,
	footer a:focus {
		background-size: 100% 2px;
	}

	.prompt {
		font-family: var(--font-mono);
		color: var(--gray-500);
		margin-right: 0.25rem;
	}

	.group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.socials {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	@media (min-width: 50em) {
		footer {
			flex-direction: row;
			justify-content: space-between;
			padding: 1.5rem 2rem;
		}

		.group {
			flex-direction: row;
			gap: 1rem;
			flex-wrap: wrap;
		}

		.socials {
			justify-content: flex-end;
		}
	}
</style>
